<h2>Forum</h2>
@foreach (Post post in Model)
{
    <p>
        <strong>Title:</strong><br />
        @post.Topic<br />
        <strong>Topic</strong><br />
        @post.Topic<br />
        <strong>Name:</strong><br />
        @post.User.Name<br />
        <strong>Text:</strong><br />
        @post.Text <br />
        <strong>Date:</strong><br />
        @post.Date<br />
    </p>
    @foreach (Reply reply in post.Replies)
    {
        <p>
            <strong class="m-3">Reply:</strong>
            @reply.ReplyText<br />
            <strong class="m-3">By:</strong>
            @reply.Replier.UserName<br />
            <strong class="m-3">Date:</strong>
            @reply.ReplyDate.Date<br />
        </p>
    }

    <a asp-action="Reply" asp-route-postId="@post.PostId" class="btn btn-secondary col-3">Add reply</a>// grab this line fully after creating commentS


}

