@model List<Post>
@{

    ViewData["Title"] = "Stories";
}

<h1 class="display-4">Filter Posts by username</h1>
Enter a username
<form method="post" class="container">
    <div class="row p-2">
        <label for="input" class="control-label col-md-1">Name</label>
        <input name="name" class="form-control col-md-6" />
    </div>
    <div class="row p-2">
        <button type="submit" class="form-control btn btn-dark col-2">Submit</button>
        <a asp-action="Forum" class="btn btn-secondary col-3">Reset</a>
    </div>
</form>

