@model ReplyVM
@{ ViewData["Title"] = "Reply"; }
<h1>Book Review</h1>
<strong>Enter your post reply</strong>
<br />
<div asp-validation-summary="All" class="text-danger"></div>
<form method="post" class="container">
    <input type="hidden" asp-for="PostID" />
    <div class="row p-2">
        <label asp-for="ReplyText" class="control-label  col-md-1">Reply</label><br />
        <textarea asp-for="ReplyText" placeholder="Write your reply here " class="form-control col-md-6">
</textarea>
        <span asp-validation-for="ReplyText" class="text-danger"></span>
    </div>
    <div class="row p-2">
        <button type="submit" class="form-control btn btn-success col-2">Submit</button>
    </div>
</form>

<br />
<hr />